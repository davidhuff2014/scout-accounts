%section.sign_in.container
  .row
    .col-sm-6.col-sm-offset-1
      = bootstrap_form_tag(url: sessions_path, layout: :horizontal, label_col: 'col-sm-2', control_col: 'col-sm-6') do |f|
        %header
          %h1 Sign in
        %fieldset
          = f.email_field  :email, placeholder: 'name@example.com'
          = f.password_field :password
        %fieldset.actions.control-group.col-sm-offset-2
          = f.submit value: 'Sign In', class: 'btn btn-default'
          -#= link_to 'Forgot Password', forgot_password_path